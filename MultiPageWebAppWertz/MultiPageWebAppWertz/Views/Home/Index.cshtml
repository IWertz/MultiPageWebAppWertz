@model List<Phone>
@{
    ViewBag.Title = "My Phone Contacts";
}

<h2>Phone List</h2>

<a asp-controller="Phone" asp-action="Add">Add New Phone</a>
<table class="table table-boardered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>PNumber</th>
            <th>Address</th>
            <th>Note</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var phone in Model)
        {
            <tr>
                <td>@phone.Name</td>
                <td>@phone.PNumber</td>
                <td>@phone.Address</td>
                <td>@phone.Note</td>
                <td>
                    <a asp-controller="Phone" asp-action="Edit" asp-route-id="@phone.PhoneId" asp-route-slug="@phone.Slug">Edit</a>
                    <a asp-controller="Phone" asp-action="Delete" asp-route-id="@phone.PhoneId" asp-route-slug="@phone.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>